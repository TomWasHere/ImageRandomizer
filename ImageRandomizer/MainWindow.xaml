<Window x:Class="ImageRandomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scrambolmatic 9000" Height="500" Width="720">

    <DockPanel HorizontalAlignment="Left" LastChildFill="True" Margin="10,10,10,10" VerticalAlignment="Top">
        <StackPanel DockPanel.Dock="Top">
        <WrapPanel>
            <TextBox Name="textboxFileName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="450"/>
            <Button Content="Browse..." HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                <Button x:Name="ButtonScramble" Content="Scramble!" Margin="10,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
            </WrapPanel>
        <WrapPanel>
                <ProgressBar Name="ProgressBar" Width="450" Margin="0,10,0,0" Visibility="Hidden"></ProgressBar>
                <Slider Name="SliderPixel" Minimum="1" Maximum="100" Width="200" Value="50" Margin="10,0,0,0"></Slider>
            </WrapPanel>
        </StackPanel>


        <Image Name="Image"  HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>


    </DockPanel>


</Window>
